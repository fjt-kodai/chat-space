.sideBar

  .userInfo
    .userInfo__nameBox
      %p.userInfo__name
        = current_user.name
      .userInfo__iconBox
        = link_to new_group_path, class:"userInfo__icon" do
          %i.fas.fa-edit
        = link_to edit_user_path(current_user), class:"userInfo__icon" do
          %i.fas.fa-cog

  .groupList
    - current_user.groups.each do |group|
      .groupList__group
        = link_to group_messages_path(group), class:"groupList__infoBox" do
          %p.groupList__groupName
            = group.name
          %p.groupList__latestComment
            = group.show_latest_message